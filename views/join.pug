extends layouts/main

block content
    form.w-full.max-w-sm.m-4(action=routes.join, method="post")
        .md_flex.md_items-center.mb-6
            .md_w-1of3
                label.block.text-gray-500.font-bold.md_text-right.mb-1.md_mb-0.pr-4(for="name") Full Name    
            .md_w-1of3    
                input.bg-gray-200.appearance-none.border-2.border-gray-200.rounded.w-full.py-2.px-4.text-gray-700.leading-tight.focus_outline-none.focus_bg-white.focus_border-purple-500(type="text", name="name", placeholder="Full Name",required=true)        
        .md_flex.md_items-center.mb-6
            .md_w-1of3
                label.block.text-gray-500.font-bold.md_text-right.mb-1.md_mb-0.pr-4(for="email") Email   
            .md_w-1of3    
                input(type="email", name="email", placeholder="Email",required=true)
        .md_flex.md_items-center.mb-6
            .md_w-1of3
                label.block.text-gray-500.font-bold.md_text-right.mb-1.md_mb-0.pr-4(for="password") Password   
            .md_w-1of3    
                input(type="password", name="password", placeholder="Password",required=true)
        .md_flex.md_items-center.mb-6
            .md_w-1of3
                label.block.text-gray-500.font-bold.md_text-right.mb-1.md_mb-0.pr-4(for="password2") Verify Password   
            .md_w-1of3    
                input(type="password", name="password2", placeholder="Verify Password",required=true)
        button.w-1of3.block.bg-yellow-500.hover_bg-yellow-600.text-white.uppercase.text-lg.mx-auto.p-4.rounded(type="submit") 회원 가입하기
    include partials/socialLogin